rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ============================================
    // SCHOOLS - Lectura pública para registro
    // ============================================
    match /schools/{schoolId} {
      allow read: if true;  // Lectura pública para formulario de registro
      allow create: if request.auth != null;  // Usuarios autenticados pueden crear
      allow update, delete: if false;  // Solo desde Firebase Console

      // Subcolección: planes dentro de cada escuela
      match /planes/{planId} {
        allow read: if true;  // Lectura pública de planes
        allow write: if request.auth != null &&
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      }
    }

    // ============================================
    // USERS - Lectura/escritura del propio usuario
    // ============================================
    match /users/{userId} {
      // Leer: solo el propio usuario o admin
      allow read: if request.auth != null && (
        request.auth.uid == userId ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );

      // Crear: solo al registrarse (crear propio documento)
      allow create: if request.auth.uid == userId;

      // Actualizar: el propio usuario o admin
      allow update: if request.auth != null && (
        request.auth.uid == userId ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );

      allow delete: if false;  // No permitir eliminar
    }

    // ============================================
    // PLANS - Lectura pública de planes activos
    // ============================================
    match /plans/{planId} {
      allow read: if true;  // Lectura pública para ver planes disponibles
      allow write: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // ============================================
    // CLASS_SCHEDULES - Lectura pública, escritura admin
    // ============================================
    match /class_schedules/{scheduleId} {
      allow read: if true;  // Lectura pública para ver horarios
      allow write: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // ============================================
    // BOOKINGS - Usuarios ven y gestionan sus reservas
    // ============================================
    match /bookings/{bookingId} {
      // Leer:
      // - El usuario puede leer sus propias reservas
      // - Cualquier usuario autenticado puede leer bookings para verificar capacidad
      // - Admin puede leer todo
      allow read: if request.auth != null;

      // Crear: usuario autenticado (debe ser su propia reserva)
      allow create: if request.auth != null &&
        request.resource.data.userId == request.auth.uid;

      // Actualizar: el usuario dueño o admin
      allow update: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );

      // Eliminar: el usuario dueño o admin
      allow delete: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
    }

    // ============================================
    // PAYMENTS - Usuarios ven sus pagos, admin ve todos
    // ============================================
    match /payments/{paymentId} {
      // Leer: el usuario que hizo el pago o admin
      allow read: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );

      // Crear: usuario autenticado (debe ser su propio pago)
      allow create: if request.auth != null &&
        request.resource.data.userId == request.auth.uid;

      // Actualizar: solo admin (para aprobar/rechazar pagos)
      allow update: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';

      allow delete: if false;  // No permitir eliminar pagos
    }

    // ============================================
    // CONFIG - Configuración de la app
    // ============================================
    match /config/{document} {
      // Lectura: todos (incluso no autenticados para app_settings)
      allow read: if true;

      // Escritura: solo admins
      allow write: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // ============================================
    // Cualquier otra colección: denegar por defecto
    // ============================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
